#!/usr/bin/env ruby

require 'bosh_manifest_generator'

if ARGV.length < 4
  puts 'Usage: bundle exec store_passwords <account_id> <aws_secret_key> <aws_key_id> <password_template>'
  exit 1
end

@account_id = ARGV[0]
@aws_secret_key = ARGV[1]
@aws_key_id = ARGV[2]
@password_template = ARGV[3]

@generator = BoshManifestGenerator::ManifestGenerator.new

@generator.vault_prefix = "secret/aws/#{@account_id}"

def p(key)
  if key == 'passwords.aws.access_key_id'
    return @aws_key_id
  elsif key == 'passwords.aws.secret_access_key'
    return @aws_secret_key
  end
  SecureRandom.hex(20)
end

def save_passwords(parent, hash)
  hash.each do |key, val|
    key = "#{parent}.#{key}"
    if val.is_a?(Hash)
      save_passwords(key, val)
    else
      puts("#{key} #{val}")
      @generator.upload_data("#{key}", val)
    end
  end
end

passwords = ERB.new(File.new(@password_template).read)

save_passwords('bosh', YAML.load(passwords.result))
